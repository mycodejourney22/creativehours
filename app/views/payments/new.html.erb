<h1>My shopping bag</h1>
<section class="container mt-5">
  <div class="Style Style__cart">
    <div class= "Style Style__cart Style__cart-heading  text-center">
      <h2>My Shopping bag</h2>
      <h1>Order #<%= @order.id %> <small><span class="badge badge-primary"><%= @order.state %></span></small></h1>
      <p><%= humanized_money_with_symbol @total %></p>
      <% @arts.each do |art| %>
        <p><%= art.description.capitalize %></p>
        <% if art.photo.attached? %>
          <div class=" text-center mx-auto"><%= cl_image_tag art.photo.key, class: " image-show " %></div>
        <% else %>
          <div class=" text-center"><%= image_tag art.image_url, class: " image-show " %></div>
        <% end %>
        <p><%= art.price %></p>
      <% end %>
      <button id="pay" type="button" class="PrimaryButton px-9 py-3.5 rounded-lg inline-flex items-center justify-center w-max">Pay now</button>
      <script src="https://js.stripe.com/v3/"></script>
      <script>
        const paymentButton = document.getElementById('pay');
        paymentButton.addEventListener('click', () => {
          const stripe = Stripe('<%= ENV['STRIPE_PUBLISHABLE_KEY'] %>');
          stripe.redirectToCheckout({
            sessionId: '<%= @order.checkout_session_id %>'
          });
        });
      </script>
    </div>
  </div>
</section>
