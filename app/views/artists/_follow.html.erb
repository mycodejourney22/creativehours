<span data-user=<%= artist.id %> data-controller="follow" data-action="click->follow#changeStatus">
  <% if current_artist.is_following?(artist.id)%>
    <%= button_to "Unfollow", unfollow_artist_path(artist.id), method: :post, remote: true %>
  <% else %>
    <%= button_to "Follow", follow_artist_path(artist.id), method: :post, remote: true %>
  <% end %>
</span>
