<div class="container Signin" data-controller="form">
  <div class="my-8">
    <h5 class="font-semibold italic line-through  decoration-[#3449B8]">CreatLogo</h5>
  </div>
  <div class="Signin Signin__heading Signin__heading-image">
    <%= image_tag "login.svg", alt: "svg image" , class: "mx-auto mb-[60px] h-[130px]"%>
  </div>
  <div class="Signin Signin__heading">
    <div class="Signin Signin__heading Signin__heading-title">
      <h2 class="font-bold  sm:text-start">Hello Again!</h2>
    </div>
    <div class="Signin Signin__heading Signin__heading-paragraph pt-2 mb-[1.5rem]  sm:text-start">
      <p class="w-8/12 ">Please sign in to continue you've been missed!</p>
    </div>
  </div>

<%= simple_form_for( resource, as: resource_name, url: session_path(resource_name),
  data: {turbo: false}) do |f| %>
  <div class="form-inputs">
    <%= f.input :email,
                required: false,
                autofocus: true,
                label: "Email address",
                label_html:  { :class => ' opacity-0 font-semibold text-sm transition-all', :"data-form-target" => "customLabelInput" },
                placeholder: 'Email address',
                input_html: { autocomplete: "email", class: "form-control-half-full form-control-style  w-full", :"data-action" => "keyup->form#checkInput", :"data-form-target" => "customInputField" } %>
    <%= f.input :password,
                required: false,
                label: "Password",
                label_html:  { :class => ' opacity-0 font-semibold text-sm transition-all', :"data-form-target" => "customLabelPassword" },
                placeholder: 'Password',
                input_html: { autocomplete: "current-password" , class: "form-control-half-full form-control-style w-full", :"data-action" => "keyup->form#checkPassword", :"data-form-target" => "customPasswordField" } %>
    <%= f.input :remember_me, input_html: { class: "form-control-style"} , as: :boolean if devise_mapping.rememberable?%>
  </div>

  <div class="text-end sm:text-start">
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <%= link_to "Forgot Password?", new_password_path(resource_name), class: "mb-4 font-semibold text-black no-underline" %><br />
    <% end %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Log in" , class: "PrimaryButton w-100 py-4.5 my-5 deviseButton inline-flex items-center justify-center w-max" %>
  </div>

  <div class="text-center">
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <p>Not a member? <%= link_to "Register now", new_registration_path(resource_name), class: "font-semibold no-underline" %></p><br />
    <% end %>
  </div>
<% end %>


</div>
