<div class="container SignUp">
  <div class="my-6">
    <h5 class="font-semibold italic line-through  decoration-[#3449B8]">CreatLogo</h5>
  </div>
  <div class="SignUp__heading mb-4 text-center">
    <h2 class="SignUp__heading SignUp__heading-title font-bold">Create an account</h2>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name),
    data: {turbo: false}) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :name,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "name", class: "form-control-half-full form-control-style" }%>
      <%= f.input :location,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "location" , class: "form-control-half-full form-control-style"}%>
      <%= f.input :photo,
                  input_html: {class: "form-control-half-full form-control-style"},
                  as: :file %>
      <%= f.input :email,
                  required: true,
                  autofocus: true,
                  input_html: { autocomplete: "email", class: "form-control-half-full form-control-style" }%>
      <%= f.input :password,
                  required: true,
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" , class: "form-control-half-full form-control-style" } %>
      <%= f.input :password_confirmation,
                  required: true,
                  input_html: { autocomplete: "new-password" , class: "form-control-half-full form-control-style"} %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Sign up" , class: "PrimaryButton w-100 py-4.5 my-3 deviseButton inline-flex items-center justify-center w-max" %>
    </div>
  <% end %>

  <div class="text-center">
    <%- if controller_name != 'sessions' %>
    <p>Have an account already? <%= link_to "Log in", new_session_path(resource_name) , class: "font-semibold no-underline" %></p><br />
    <% end %>
  </div>
</div>
