  <div class="Style py-20">
    <div class="Style__Row-heading mb-8"><h4 class="font-bold">Explore</h4></div>
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-5 md:grid-cols-3 lg:grid-cols-4 ">
      <% @arts.each do |art| %>
        <div>
          <%# <%= link_to art_path(art) do  %>
            <%# <div><%= image_tag art.image_url, class: "homepage-image img-fluid gallery__img"</div> %>
          <%# <% end %>
