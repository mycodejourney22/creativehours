<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1574577457890-57d56460e04c?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1740&q=80);">
  <div class="container text-center">
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
  </div>
  <%= form_tag root_path, method: :get, class: "d-flex w-50 mx-auto" do %>
    <%= text_field_tag :query,
      params[:query],
      class: "form-control",
      placeholder: "Find a creative"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
  <% end %>
</div>
<div class="container gallery mt-4">
  <% @arts.each do |art| %>
    <div>
      <div class="header-item d-flex align-items-center justify-content-between">
        <div class= "d-flex" style="gap: 0.8rem">
          <%= image_tag "https://kitt.lewagon.com/placeholder/users/cveneziani", class: "avatar", alt: "avatar" %>
          <div><p><%= art.artist.name %></p></div>
        </div>
        <div class= "d-flex" style="gap: 0.8rem">
          <div><i class="fa-solid fa-heart"></i></div>
          <div><i class="fa-solid fa-square-plus"></i></div>
        </div>
      </div>
      <%= image_tag art.image_url, class: "homepage-image img-fluid gallery__img" %>
    </div>
  <% end %>
</div>
