    <%= form_tag arts_path, method: :get, class: "d-flex w-full mx-auto" do %>
      <%= text_field_tag :query,
        params[:query],
        class: "form-control",
        placeholder: "Find a creative"
      %>
      <%= submit_tag "Search", class: "PrimaryButton px-9 py-3.5 rounded inline-flex items-center justify-center w-max" %>
    <% end %>
