<div class="container">
  <div class=" container Style__Row-heading my-8 "><h4 class="font-bold">Find Arts</h4></div>
      <%= form_tag arts_path, method: :get, class: "container d-flex w-full mx-auto" do %>
        <%= text_field_tag :query,
          params[:query],
          class: "form-control",
          placeholder: "Search..."
        %>
        <%= submit_tag "Search", class: "PrimaryButton px-9 py-3.5 rounded inline-flex items-center justify-center w-max" %>
      <% end %>
  </div>
  <div class="container text-center mt-3">
    <h2 class="font-black"><%= params[:query].capitalize %></h2>
    <h4 class="font-semibold">Browse <%= @arts.count %>+ <%= params[:query] %> design for inspiration</h4>
    <span><p>Inspire Search Design Create</p></span>
  </div>

  <div class="container  mt-5 grid grid-cols-1 sm:grid-cols-2 gap-5 md:grid-cols-3 lg:grid-cols-4">
    <% @arts.each do |art| %>
      <div>
        <%# <%= link_to art_path(art) do  %>
          <%# <div><%= image_tag art.image_url, class: "homepage-image img-fluid gallery__img"</div> %>
        <%# <% end %>
        <%= render "devise/shared/modal-home", art: art %>
        <div class="header-item d-flex justify-between pt-2">
          <div class= "d-flex" style="gap: 0.8rem">
            <%= cl_image_tag art.artist.photo.key, class: "avatar", alt: "avatar" , style: "height:1.3rem"%>
            <div><p><%= link_to art.artist.name, artist_path(art.artist) %></p></div>
          </div>
          <div class= "header-icon d-flex" style="gap: 0.8rem">
            <div><i class="fa-solid fa-heart"></i> 0</div>
            <div><i class="fa-solid fa-square-plus"></i></div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
