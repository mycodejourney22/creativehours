<div class="modal-body">
  <%= simple_form_for([ @art]) do |f| %>
    <%= f.input :description %>
    <%= f.input :price, :input_html => { :class => 'border-[#3449B8]'} %>
    <%= f.input :photo, as: :file %>
    <%= f.button :submit, "Submit", class: "PrimaryButton w-100 deviseButton inline-flex items-center justify-center "%>
  <% end %>
</div>
